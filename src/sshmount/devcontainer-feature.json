{
    "name": "ssh-mount",
    "id": "sshmount",
    "version": "0.0.3",
    "description": "Mounts the host's ~/.ssh directory into the container",
    "options": {},
    "mounts": [
        {
            "type": "bind",
            "source": "${localEnv:HOME}/.ssh",
            "target": "/root/.ssh,readonly"
        },
        {
            "type": "bind",
            "source": "${localEnv:HOME}/.ssh",
            "target": "/home/vscode/.ssh,readonly",
        }
    ]
}
